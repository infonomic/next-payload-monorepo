{
  "name": "@org/server",
  "description": "Server for running Next.js and Payload CMS",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rm -rf node_modules build dist .turbo",
    "dev": "PAYLOAD_CONFIG_PATH=../cms/src/payload.config.ts NODE_ENV=development nodemon",
    "dev:seed": "PAYLOAD_CONFIG_PATH=../cms/src/payload.config.ts PAYLOAD_SEED=true NODE_ENV=development nodemon",
    "build:server": "rm -rf dist/* && tsc",
    "build": "pnpm build:server",
    "serve": "PAYLOAD_CONFIG_PATH=../cms/dist/payload.config.js NODE_ENV=production node --conditions=serve dist/index.js",
    "lint": "eslint --ext .ts,.js ./src/index.ts"
  },
  "dependencies": {
    "@org/cms": "workspace:*",
    "@org/shared": "workspace:*",
    "@org/web": "workspace:*",
    "@swc/core": "^1.3.64",
    "dotenv": "^16.3.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/newrelic": "^9.14.0",
    "@types/node": "^20.2.5",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}